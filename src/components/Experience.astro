---
  const { lists } = Astro.props;
---

{lists.map((item) => (
<div class="w3-container">
  <h4 class="w3-opacity"><b>{item.experience}</b></h4>
  <h6 class="w3-opacity subline">{item.company}</h6>
  <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i>{item.period}{item.current &&<> - <span
        class="w3-tag w3-teal w3-round">Current</span></>}</h6>
  {item.description.split(".").map((desc) => (
  <p>{desc}</p>
  ))}
  <hr>
</div>
))}

<style>
 .subline {
   font-size: 15px;
 }
</style>